<% if @current_user %>

  <h1><%= @place["name"] %></h1>

  <h3>My Posts</h3>

  <div class="row">
    <% for post in @posts %>
      <div class="col-md-4 col-sm-6">
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>
        <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <% else %>
          <img src="<%= post["image"] %>" class="img-fluid">
        <% end %>
        <p><%= post["description"] %></p>
      </div>
    <% end %>
  </div>
  <p>
    <a class="btn btn-success" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
  </p>
  <% else %>
    You must first <a href="/login">login</a> to post.
  <% end %>

<p>
  <a class="btn btn-secondary" href="/places">Back to All Places</a>
</p>